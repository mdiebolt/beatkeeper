doctype html
html(lang="en")
  head
    title Beatkeeper
    link(rel="stylesheet" media="screen" href="src/css/staff.css")
    link(rel="stylesheet" media="screen" href="src/css/loops.css")
    link(rel="stylesheet" media="screen" href="src/css/stage.css")
    link(rel="stylesheet" media="screen" href="src/css/buttons.css")
    link(rel="stylesheet" media="screen" href="src/css/main.css")
  body
    .site__sidebar
      .beatkeeper__loops
        h2.beatkeeper__section-header Step 1: Select a beat
    .site__main
      .beatkeeper__stage
        img.beatkeeper__stage-hh.beatkeeper__stage-instrument(src="src/images/high_hat.svg")
        img.beatkeeper__stage-snare.beatkeeper__stage-instrument(src="src/images/snare_drum.svg")
        img.beatkeeper__stage-kick.beatkeeper__stage-instrument(src="src/images/bass_drum.svg")
      h2.beatkeeper__section-header Step 2: Recreate the beat
      svg.beatkeeper__notation
        g.beatkeeper__notation-container
          pattern#hh-thumbnail(x="0" y="0" height="30" width="30")
            image(x="0" y="0" width="30" height="30" xlink:href="src/images/high_hat_thumbnail.png")
          pattern#snare-thumbnail(x="0" y="0" height="30" width="30")
            image(x="0" y="0" width="30" height="30" xlink:href="src/images/snare_drum_thumbnail.png")
          pattern#kick-thumbnail(x="0" y="0" height="30" width="30")
            image(x="0" y="0" width="30" height="30" xlink:href="src/images/bass_drum_thumbnail.png")

          g.beatkeeper__instruments
            g.beatkeeper__instrument(transform="translate(0,40)")
            g.beatkeeper__instrument(transform="translate(0,80)")
            g.beatkeeper__instrument(transform="translate(0,120)")
          g.beatkeeper__subdivisions
          g.beatkeeper__notes
          g.beatkeeper__playback

      .beatkeeper__actions
        button.beatkeeper__button.beatkeeper__preview-submission(m-wide) Listen
        button.beatkeeper__button.beatkeeper__submit(s-visible m-wide) Submit
        button.beatkeeper__button.beatkeeper__try-again(m-wide) Try again
        button.beatkeeper__button.beatkeeper__give-up(m-wide) Tell me the answer
    script(type="text/javascript" src="dist/bundle.js" charset="utf-8")
