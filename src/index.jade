doctype html
html(lang="en")
  head
    title Beatkeeper
    link(type="text/css" href="css/main.css")
    link(rel="stylesheet" media="screen" href="src/css/main.css")
  body
    .site__sidebar
      .beatkeeper__loops
    .site__main
      .beatkeeper__playback-animation
        img.beatkeeper__playback-hh(src="src/images/high_hat.svg")
        img.beatkeeper__playback-snare(src="src/images/snare_drum.svg")
        img.beatkeeper__playback-bass(src="src/images/bass_drum.svg")
      svg.beatkeeper__notation(width="800" height="200")
        g.beatkeeper__instruments
          g.beatkeeper__instrument(transform="translate(0,40)")
          g.beatkeeper__instrument(transform="translate(0,80)")
          g.beatkeeper__instrument(transform="translate(0,120)")
        g.beatkeeper__subdivisions

      .beatkeeper__actions
        button Submit
        button Try again
        button Tell me the answer
    script(type="text/javascript" src="dist/bundle.js" charset="utf-8")
